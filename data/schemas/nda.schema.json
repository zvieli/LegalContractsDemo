{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NDARecord",
  "type": "object",
  "required": [
    "id", "domain", "source", "jurisdiction", "retrievedAt", "synthetic",
    "classification", "rationale", "labels", "claimedWei", "awardedWei",
    "severity", "evidenceURIs"
  ],
  "properties": {
    "id": {"type": "string"},
    "domain": {"type": "string", "enum": ["NDA"]},
    "source": {"type": "string"},
    "jurisdiction": {"type": "string"},
    "retrievedAt": {"type": "string", "format": "date-time"},
    "synthetic": {"type": "boolean"},
    "classification": {"type": "string", "maxLength": 64},
    "rationale": {"type": "string", "maxLength": 1024},
    "labels": {"type": "array", "items": {"type": "string"}},
    "claimedWei": {"type": "string", "pattern": "^0x[0-9a-fA-F]+$"},
    "awardedWei": {"type": "string", "pattern": "^0x[0-9a-fA-F]+$"},
    "severity": {"type": "integer", "minimum": 1, "maximum": 5},
    "evidenceURIs": {"type": "array", "items": {"type": "string"}},
    "evidenceHash": {"type": ["string", "null"], "pattern": "^0x[0-9a-fA-F]{64}$"},
    "originalTextHash": {"type": ["string", "null"], "pattern": "^0x[0-9a-fA-F]{64}$"}
  }
}
